{
  "name": "@positron/examples",
  "version": "0.0.0",
  "description": "Examples for the Positron 3D game engine.",
  "main": "index.js",
  "scripts": {
    "clean": "del dist",
    "prebuild": "npm run clean",
    "build": "run-p build:assets build:pug build:scss build:ts",
    "build:assets": "cpx node_modules/@positron/core/dist/positronjs dist/assets",
    "build:pug": "pug src --out ./dist --pretty",
    "build:scss": "node-sass src/*.scss -o dist",
    "build:ts": "rollup -c",
    "prestart": "npm run clean",
    "start": "run-p watch start:server",
    "start:server": "browser-sync start --server --ss './dist' -f './dist'",
    "watch": "run-p watch:assets watch:pug watch:scss watch:ts",
    "watch:assets": "cpx -w node_modules/@positron/core/dist/positron.js dist/assets",
    "watch:pug": "pug src --out ./dist --pretty --watch",
    "watch:scss": "npm run build:scss && node-sass src/*.scss -o dist -w",
    "watch:ts": "rollup -cw"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@positron/core": "0.0.0"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "del-cli": "^1.1.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^1.1.0",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "typescript": "^3.2.2"
  }
}
